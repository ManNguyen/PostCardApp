<!DOCTYPE html>
<html ng-app="PostCardApp">
<head>
    <title></title>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

</head>
<body ng-controller="MainController as MainCtrl">
    <nav class="navbar navbar-default navbar-inverse">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">Post Card App</a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li><a href="#/Home">Home <span class="sr-only">(current)</span></a></li>
                    <li ng-if="isAuthenticated"><a href="#/PostCard">Post Card</a></li>

                </ul>
                <ul class="nav navbar-nav pull-right">
                    <li ng-if="!isAuthenticated"><a href="#/Login">Login </a></li>
                    <li ng-if="!isAuthenticated"><a href="#/Register">Register</a></li>
                    <li ng-if="isAuthenticated"><a ng-click="logout()">Logout </a></li>
                </ul>
            </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
    </nav>
    <div ui-view></div>

    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.6/angular.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/1.0.0-alpha.5/angular-ui-router.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.6/angular-sanitize.js"></script>
    <script src="~/Angular/app.js"></script>
    <script src="~/Angular/router.js"></script>
    <script src="~/Angular/Services/Authenticate.Service.js"></script>
    <script src="~/Angular/Controller/Main.Controller.js"></script>
    <script src="~/Angular/Pages/PostCardMenu.Component.js"></script>
    <script src="~/Angular/Pages/PostCard.Page.js"></script>
    <script src="~/Angular/Pages/Login.Page.js"></script>
    <script src="~/Angular/Pages/Register.Page.js"></script>
</body>
</html>

